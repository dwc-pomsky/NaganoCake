<h2 style="position:relative; top:10px; left:200px;">ジャンル一覧・追加</h2>

<div class="row">
  <%= form_with model: @genre, url: admin_genres_path(@genre.id),method: :post, local: true do |f| %>
    <%= f.label :"ジャンル名", autofocus: true, placeholder: "ジャンル名" %>
    <%= f.text_field :name %>
  <% end %>
</div>

<div class="row">
  <table>
    <% @genres.each do |genre| %>
      <tr>
        <td>ケーキ</td><!-- 後ほど削除します。 -->
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path, class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </table>
</div>