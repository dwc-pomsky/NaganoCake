<h1><%= customer.name %>さんの会員詳細</h1>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.last_name %> <#%= customer.first_name %></td>
      <td><%= customer.kana_last_name %> <#%= customer.kana_first_name %></td>
      <td><%= customer.post_code %></td>
      <td><%= customer.address %></td>
      <td><%= customer.telephone %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
  </tbody>
</table>