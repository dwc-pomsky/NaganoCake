<div class='container'>
  <h2><%= @customer.last_name %> <%= @customer.first_name %> さんの会員情報</h2>

  <div class='row'>
    <p class='col-md-2'>会員ID</p>
    <p class='col-md-2'><%= @customer.id %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>氏名</p>
    <p class='col-md-2'><%= @customer.last_name %> <%= @customer.first_name %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>フリガナ</p>
    <p class='col-md-2'><%= @customer.kana_last_name %> <%= @customer.kana_first_name %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>郵便番号</p>
    <p class='col-md-2'><%= @customer.post_code %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>住所</p>
    <p class='col-md-2'><%= @customer.address %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>電話番号</p>
    <p class='col-md-2'><%= @customer.telephone %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>メールアドレス</p>
    <p class='col-md-2'><%= @customer.email %></p>
  </div>

  <div class='row'>
    <p class='col-md-2'>会員ステータス</p>
      <% if @customer.is_deleted == true %>
       <p class="col-md-2 text-secondary font-weight-bold">退会</p>
      <% else %>
       <p class="col-md-2 text-success font-weight-bold">有効</p>
      <% end %>
    </p>
  </div>

  <div class='row'>
    <p class='col-md-2'></p>
    <p class='col-md-2'><%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-success edit_customer_#{@customer.id}" %></p>
    <!--とりあえずのボタン、今はEditに飛びます-->
    <p class='col-md-2'><%= link_to '注文履歴一覧を見る', edit_admin_customer_path(@customer), class: "btn btn-primary edit_customer_#{@customer.id}" %></p>
  </div>

</div>


