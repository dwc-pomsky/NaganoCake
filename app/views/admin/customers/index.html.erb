<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>会員一覧</h2>


      <table class='table'>
       <thead>
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
        <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td><%= link_to customer.last_name + customer.first_name , admin_customer_path(customer) %></td>
           <td><%= customer.email %></td>
           <td><%= customer.is_deleted %></td>
         </tr>
        <% end %>

        <%= paginate @customers %>

       </tbody>
      </table>


    </div>
  </div>
</div>
