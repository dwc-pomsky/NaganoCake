<div class="container">
  <div class="row mr-3">
    <h2 class="m-5 bg-light px-4">商品編集</h2>
  </div>

  <div class="d-flex justify-content-center">
    <%= form_with model: @item, url: admin_item_path,method: :patch, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :"商品画像", class: 'col-form-label' %>
      <div class="col-auto"><%= f.attachment_field :image, class: "form-control-file" %></div>
    </div>
    <div class="form-group row">
      <%= f.label :"商品名", class: 'col-form-label mr-3' %>
      <div class="col-auto"><%= f.text_field :name, class: 'form-control' %></div>
    </div>
    <div class="form-group row">
      <%= f.label :"商品説明", class: 'col-form-label ' %>
      <div class="col-auto"><%= f.text_area :introduction, class: 'form-control ' %></div>
    </div>
    <div class="form-group row">
      <%= f.label :"ジャンル", class: 'col-form-label' %>
      <div class="col-auto align-self-center"><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択して下さい --", class: 'form-select' %></div>
    </div>
    <div class="form-group row form-inline">
      <%= f.label :"税抜価格", class: 'col-form-labelcol-md-2' %>
      <div class="col-auto align-middle"><%= f.text_field :price, class: 'form-control' %>円</div>
    </div>
    <div class="form-group form-check-inline">
      <%= f.label :"販売ステータス", class: 'col-form-label'  %>
      <div class="col-auto form-check-inline">
        <%= f.radio_button :sales_status, :true, class: 'form-check-input' %>
        <%= f.label :"販売中", class: 'form-check-label' %>
        <%= f.radio_button :sales_status, :false, class: 'form-check-input' %>
        <%= f.label :"販売停止中", class: "form-check-label" %>
      </div>
    </div>
    <div class="col-auto">
      <%= f.submit "変更を保存",class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>