
  <div align="right">
    <button class="btn" style="text-align:right;">
      <%= link_to "商品追加", new_admin_item_path, class: "btn btn-success" %>
    </button>
  </div>
  <div>
    <table align="center" border="1px solid ">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <th><%= link_to item.name, admin_item_path(item.id) %></th>
          <th><%= item.price %></th>
          <th><%= item.genre.name %></th>
          <th>
            <% if item.sales_status == true %>
              販売中
            <% else %>
            　販売停止中
            <% end %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>