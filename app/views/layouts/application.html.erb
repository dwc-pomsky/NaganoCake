<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>

    <!--ロゴ-->

    <a class="logo" href="/"><%= image_tag('logoimage') %></a>

    <!--cutomerログイン状態-->

    <% if customer_signed_in? %>

      <%= link_to 'マイページ' , class: "btn btn-light" %>
      <%= link_to '商品一覧' , class: "btn btn-light" %>
      <%= link_to 'カート' , class: "btn btn-light" %>
      <%= link_to 'ログアウト' , class: "btn btn-light" %>

    <!--adminログイン状態-->

    <% elsif admin_signed_in? %>

      <%= link_to '商品一覧' , class: "btn btn-light" %>
      <%= link_to '会員一覧' , class: "btn btn-light" %>
      <%= link_to '注文履歴一覧' , class: "btn btn-light" %>
      <%= link_to 'ジャンル一覧' , class: "btn btn-light" %>
      <%= link_to 'ログアウト' , class: "btn btn-light" %>

    <!--ログアウト状態-->

    <% else %>

      <%= link_to 'About' , class: "btn btn-light" %>
      <%= link_to '商品一覧' , class: "btn btn-light" %>
      <%= link_to '新規登録' , class: "btn btn-light" %>
      <%= link_to 'ログイン' , class: "btn btn-light" %>

    <% end %>

    <!--できれば検索窓もつける-->

  </header>

  <body>
    <%= yield %>
  </body>

  <footer>

  </footer>

</html>
